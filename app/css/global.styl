*
*/

@import variables

@font-face
   font-family NueLight
   font-style normal
   src url(../font/HelveticaNeue-UltraLight.otf)

@font-face
   font-family NueBold
   font-style normal
   src url(../font/HelveticaNeue-Light.otf)

body
    font-family NueLight
    letter-spacing 0.02em

body
a
a:visited
    color $gray

a
    text-decoration none


